{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"files": {
		"include": ["src/**/*"],
		"ignore": ["src/api/**/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true
	},
	"javascript":{
		"formatter":{
			"semicolons": "always",
			"trailingComma": "all",
			"bracketSpacing": true,
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
